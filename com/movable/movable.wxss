page {
  height: 100%;
}

.movable-box {
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: 1000;
}

.movable-box .movable-btn {
  position: fixed;
  width: 100rpx;
  height: 100rpx;
  z-index: 11;
}

.movable-box .movable-btn .image {
  position: relative;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.movable-box .movable-btn .image-bg-left{
  position: absolute;
  top: -8rpx;
  left: -26rpx;
  width: 80rpx;
  height: 116rpx;
  background: #D8D8D8;
}
.movable-box .movable-btn .image-bg-left::before{
  content: "";
  position: absolute;
  top: 0;
  left: 23rpx;
  width: 116rpx;
  height: 116rpx;
  border-radius: 50%;
  background: #D8D8D8;
}
.movable-box .movable-btn .image-bg-right{
  position: absolute;
  top: -8rpx;
  left: -12rpx;
  width: 116rpx;
  height: 116rpx;
  border-radius: 50%;
  background: #D8D8D8;
}
.movable-box .movable-btn .image-bg-right::before{
  content: "";
  position: absolute;
  top: 0;
  left: 64rpx;
  width: 80rpx;
  height: 116rpx;
  background: #D8D8D8;
}

